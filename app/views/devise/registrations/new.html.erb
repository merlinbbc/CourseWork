<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4" style="margin-top: 8%; margin-bottom: 2%"><h2>Sign up</h2></div>
  <div class="col-md-4"></div>
</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-md-4">
            <div class="pull-right" style="margin-top: 3%">
              Email:
            </div>
          </div>
          <div class="col-md-7">
            <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
          </div>
          <div class="col-md-1"></div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="pull-right" style="margin-top: 3%">
              Password:
            </div>
          </div>
          <div class="col-md-7">
            <%= f.password_field :password, autocomplete: "off", 'placeholder'=> "8 characters minimum", :class => 'form-control' %>
          </div>
          <div class="col-md-1"></div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="pull-right" style="margin-top: 3%">
              Password confirmation:
            </div>
          </div>
          <div class="col-md-7">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
            <div class="center" style="margin-top: 35px; margin-bottom: 10%">
              <%= f.submit "Sign up", class: "btn btn-primary"%>
            </div>
            <div class="center">
              <%= render "devise/shared/links" %>
            </div>

          </div>
          <div class="col-md-1"></div>
        </div>

      </div>
      <div class="col-md-4"></div>
    </div>






  <% end %>






