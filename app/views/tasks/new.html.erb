
<div class="row" style="margin-bottom: 4%;">
  <div class="col-md-4"></div>
  <div class="col-md-4"><h2>New Task</h2></div>
  <div class="col-md-4"></div>
</div>
  <%= form_for :task, url: tasks_path do |f| %>
      <% if @task.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@task.errors.count, "error") %> prohibited
                this task from being saved:
              </h2>
              <ul>
                <% @task.errors.full_messages.each do |msg| %>
                    <%= msg %></br>
                <% end %>
              </ul>

            </div>
        <% end %>
<div class="row">
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-3">
        <div class="pull-right" style="margin-top: 2%; margin-bottom: 4%" >
          Title:
        </div>
      </div>
      <div class="col-md-9">
        <%= f.text_field :title , :class=>'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="pull-right" style="margin-top: 4%; margin-bottom: 4%" >
          Section:
        </div>
      </div>
      <div class="col-md-9">
        <%= f.collection_select :section_id, Section.all, :id, :name ,{prompt: "Select a category"}, {class: 'bs-select form-control'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="pull-right" style="margin-top: 2%; margin-bottom: 4%" >
          Rating:
        </div>
      </div>
      <div class="col-md-9">
        <%= f.number_field :rating , 'max'=>10, 'min'=>1, :class=>'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="pull-right" style="margin-top: 2%; margin-bottom: 4%" >
          Tags:
        </div>
      </div>
      <div class="col-md-9">
        <%= f.text_field :tag_list, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="pull-right">
          Answers:
        </div>
      </div>
      <div class="col-md-9">
        <div class = "answers">
          <input class="text optional form-control" type="text" value="" name="task[answers][]" id="task_" >
        </div>
        <div class="center">
          <button type="button" id= "plus" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus" ></span>
          </button>
        </div>
      </div>
    </div>
  </div>


  <div class="col-md-7">
    <div class="pull-left">
      Text:
    </div><br>
    <%= f.text_area :text, 'data-provide'=>'markdown', :rows=>'12' %><br><br>
    <%= f.submit "Save task", class: "btn btn-primary pull-left"  %>
  </div>
  <div class="col-md-1"></div>
</div>

<% end %>
</div>