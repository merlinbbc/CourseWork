<h1>New Task</h1>
<%= form_for :task, url: tasks_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.label :rating %><br>
      <%= f.number_field :rating , 'max'=>10, 'min'=>1 %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>

