<div class="hero-unit">

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4"><h2>New Task</h2></div>
    <div class="col-md-4"></div>
  </div>

  <div class="field" align="center">
    <%= form_for :task, url: tasks_path do |f| %>
        <% if @task.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@task.errors.count, "error") %> prohibited
                this task from being saved:
              </h2>
              <ul>
                <% @task.errors.full_messages.each do |msg| %>
                    <%= msg %></br>
                <% end %>
              </ul>

            </div>
        <% end %>
<br>
<br>
<div class="row">
  <div class="col-md-1">
    <div class="pull-right">
      Title:
    </div><br><br>
    <div class="pull-right">
      Section:
    </div><br><br>
     <div class="pull-right">
      Rating:
    </div><br><br>
    <div class="pull-right">
      Answers:
    </div>

  </div>
  <div class="col-md-3">
    <%= f.text_field :title , :class=>'form-control' %>
    <%= f.collection_select :section_id, Section.all, :id, :name ,{prompt: "Select a category"}, {class: 'bs-select form-control'} %>
    <%= f.number_field :rating , 'max'=>10, 'min'=>1, :class=>'form-control' %>

    <div class = "answers">
      <input class="text optional form-control" type="text" value="" name="task[answers][]" id="task_" >
    </div>
    <button type="button" id= "plus" class="btn btn-primary center">
      <span class="glyphicon glyphicon-plus" ></span>
    </button>
  </div>

  <div class="col-md-7">
    <div class="pull-left">
      Text:
    </div><br>
    <%= f.text_area :text, 'data-provide'=>'markdown', :rows=>'12' %><br><br>
    <%= f.submit "Save task", class: "btn btn-primary pull-left"  %>
  </div>
  <div class="col-md-1"></div>
</div>


<div class="row">
  <div class="col-md-5"></div>
  <div class="col-md-2"></div>
  <div class="col-md-5"></div>
</div>


<% end %>
  </div>
</div>