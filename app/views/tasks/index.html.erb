<h1>Listing Task</h1>



  <% @tasks.each do |task| %>
    <%= task.title %> </br>
    <%=markdown(task.text)%>
    <%= task.rating %> </br>
    <%= link_to 'Show', task_path(task) %>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Destroy', task_path(task),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></br>

  <% end %>
